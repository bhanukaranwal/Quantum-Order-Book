# Application
NODE_ENV=development
LOG_LEVEL=debug
PORT=8080
API_URL=http://localhost:8080
WEBSOCKET_URL=ws://localhost:8080/ws
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Authentication
JWT_SECRET=change_this_in_production_to_a_secure_random_string
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800
API_KEY_EXPIRATION_DAYS=90

# Database connections
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=quantum
POSTGRES_PASSWORD=quantum
POSTGRES_DB=quantum_users
POSTGRES_URL=postgres://quantum:quantum@postgres:5432/quantum_users

TIMESCALEDB_HOST=timescaledb
TIMESCALEDB_PORT=5432
TIMESCALEDB_USER=quantum
TIMESCALEDB_PASSWORD=quantum
TIMESCALEDB_DB=market_data
TIMESCALEDB_URL=postgres://quantum:quantum@timescaledb:5432/market_data

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# Kafka configuration
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=quantum-order-book
KAFKA_CONSUMER_GROUP=quantum-order-book-consumer

# Exchange API credentials (example)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here
COINBASE_API_PASSPHRASE=your_coinbase_api_passphrase_here

# Service discovery
SERVICE_USER=http://user-service:8085
SERVICE_MARKET_DATA=http://market-data-service:8082
SERVICE_ORDER_BOOK=http://order-book-service:8081
SERVICE_ANALYTICS=http://analytics-service:8083
SERVICE_RISK=http://risk-management:8084

# Metrics and monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
PROM_PUSHGATEWAY_URL=http://pushgateway:9091

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Feature flags
FEATURE_ARBITRAGE_ENGINE=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_CROSS_EXCHANGE_ROUTING=true

# Performance tuning
MAX_WEBSOCKET_CONNECTIONS=10000
ORDER_BOOK_SNAPSHOT_INTERVAL_MS=60000
MAX_ORDER_BOOK_DEPTH=100
CACHE_TTL_SECONDS=60
